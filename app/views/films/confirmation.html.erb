<h3>Multiple films found! Confirm which film you would like to select</h3>

<% response = @response.parsed_response %>

<% results = response["results"] %>
<% matching_titles = results.select { |movie| movie['title'].include? @film_title} %>



<div>
<%= form_with(url: new_film_path) do |form| %>
  <% matching_titles.each do |movie| %>
  </br>
  <%= form.radio_button "film[title]", movie['title'] %>
  <%= form.hidden_field "film[genre_id]", value: @film_genre_id%>
  <%= form.hidden_field "film[description]", value: @film_description %>
  <%= form.label "film[title]", movie['title'], style: 'display: inline-block'  %>
  <%= form.label :release_date, movie['release_date'], style: 'display: inline-block'  %>
<% end %>
<br><br>
<%= form.submit "Save" %>
<% end %>
</div>
