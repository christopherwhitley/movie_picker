<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @film.title %>
</p>

<p>
  <strong>Description:</strong>
  <%= @film.description %>
</p>

<p>
  <%= @film.genre_id %><br>

</p>

<% response = @response.parsed_response %>

<% results = response["results"]%>


<% if movie = results.find { |movie| movie['title'] == @filmname} %>

   <%# Poster %>
   <div>
   <p class="poster"><%= image_tag 'https://image.tmdb.org/t/p/w300' << (movie['poster_path']) %></p></br>
   <h3> <%= movie['title'] %></h3>
   <h4>Overview</h4>
   <%= movie['overview'] %> <br /><br />
   <h4>ID</h4>
   <%= movie['id']  %><br /><br />
   <h4>Release Date (U.S.)</h4>
   <%= movie['release_date'] %>
   <h4>Genre</h4>
   <%= link_to @film.genre.name, genre_path(@film.genre)%>
   </div></br>
<% else  %>
<% 'not found' %>
<% end %>


